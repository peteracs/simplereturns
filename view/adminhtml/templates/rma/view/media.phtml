/**
 * @see Tmo\SimpleReturns\Api\Data\AttachmentInterface
 * @see Tmo\SimpleReturns\Model\ViewModel\Rma\ViewView
 * @see Magento\Framework\View\Element\Template
 * @see Magento\Sales\Api\Data\OrderInterface
 */

/** @var Template $block */
/** @var ViewView $viewModel */
$viewModel = $block->getViewModel();
?>
<?php if ($viewModel->hasAttachments()): ?>
<?php /** @var array $attachments */ ?>
<?php $attachments = $viewModel->getAttachments() ?>
<section class="admin__page-section simplereturns-rma-attachments">
    <div class="admin__page-section-item">
        <div class="admin__page-section-item-title">
            <span class="title"><?= $block->escapeHtml(__('Attachments')) ?></span>
        </div>
        <div class="admin__page-section-item-content">
            <?php foreach ($attachments as $attachment): ?>
                <div class="attachment framed">
                    <a href="<?= $block->escapeUrl($attachment) ?>" target="_blank">
                        <img src="<?= $block->escapeUrl($attachment) ?>"/>
                    </a>
                </div>
            <?php endforeach ?>
        </div>
    </div>
</section>
<?php endif ?>
