<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="simplereturns_orders_search"
                   template="Tmo_SimpleReturns::orders/search.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="column_headers" xsi:type="array">
                        <item name="order_number" xsi:type="string">Order #</item>
                        <item name="order_date" xsi:type="string">Date</item>
                        <item name="order_total" xsi:type="string">Order Total</item>
                        <item name="order_status" xsi:type="string">Order Status</item>
                    </argument>
                    <argument name="view_model" xsi:type="object">Tmo\SimpleReturns\Model\ViewModel\Orders\SearchView</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
