<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Tmo_SimpleReturns::css/simplereturns.css"/>
        <css src="Tmo_SimpleReturns::css/tooltip.css"/>
    </head>
    <body>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="sidebar.additional" remove="true"/>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="simplereturns_package_create"
                   template="Tmo_SimpleReturns::package/create.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">Tmo\SimpleReturns\Model\ViewModel\Package\CreateView</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
